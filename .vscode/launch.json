  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "[Rust] Debug spiced",
      "program": "${workspaceFolder}/target/debug/spiced",
      "args": [],
      "cwd": "/Users/phillip/code/phillipleblanc/spicyrust",
      "preLaunchTask": "rust: cargo build"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "[Rust] Debug spice sql",
      "program": "${workspaceFolder}/target/debug/spiced",
      "args": ["--repl"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "rust: cargo build"
    },
    {
      "name": "spice version",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/spice/main.go",
      "args": ["version"]
    },
    {
      "type": "lldb",
      "request": "attach",
      "name": "[Rust] Attack to spiced",
      "program": "~/.spice/bin/spiced",
      "pid": "${input:pid}"
    },
    {
      "name": "[Rust] Debug runtime benchmark",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["build", "--package", "runtime", "--bench", "bench"],
        "problemMatcher": "$rustc"
      }
    }
  ],
  "inputs": [
    {
      "id": "pid",
      "type": "promptString",
      "description": "pid of the process (Get this `pgrep spiced`)"
    }
  ]
}
